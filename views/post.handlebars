<div class="container card has-text-centered ">
  <br>
      <div class="card-image">
  </div>
  <div class="card-content has-text-centered">
    <div class="media-center">
      <div class="media-center">
        <figure class="container image is-inline-block" id="post-image">
          <img src="{{picture}}" alt="{{title}}">
        </figure>
      </div>
      
    </div>
    <br>
    <div class="media-content">
        <p class="title is-4">{{title}}</p>
      </div>
    <div class="content is-size-5">
      {{description}}
      <br>
        Created by: {{user.first_name}} {{user.last_name}}
    </div>
  </div>
</div>

<div class="container comment-list">
  {{#if comments.length}}
  {{#each comments as |comment|}}
  <div class="box media mx-6 mt-4">
    <figure class="media-left align-middle">
        <img class="image is-64x64" src="https://static.vecteezy.com/system/resources/previews/002/318/271/original/user-profile-icon-free-vector.jpg">
    </figure>
    <div class="media-content">
      <div class="content">
        <p>
          {{!-- <br>
          <strong>{{user.first_name}} {{user.last_name}}</strong> 
          <br> --}}
          {{comment.text}}
          <br>
          <small><a>Like</a> Â· <a>Reply</a></small>
        </p>
      </div>
    </div>
  </div>
  {{/each}}
  {{/if}}
</div>


<div class="container">
<div class="media m-6 px-4">
  <figure class="media-left">
    {{!-- <p class="image is-64x64"> --}}
      <img class="image is-64x64" src="https://static.vecteezy.com/system/resources/previews/002/318/271/original/user-profile-icon-free-vector.jpg">
    {{!-- </p> --}}
  </figure>
  <form id="new-comment-form" data-id="{{id}}">
    <div class="field">
      <div class="control">
        <textarea class="textarea" id="comment-text" placeholder="Add a comment..."></textarea>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <button class="button is-dark" type="submit">Submit</button>
      </div>
    </div>
  </form>
</div>
</div>

