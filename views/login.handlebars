<div class="columns is-variable is-6">
  <div class="column">
    <h2 class="title is-2">Login</h2>

    <form class="box" id="login-form">
      <div class="field">
        <label class="label">Email</label>
        <div class="control">
          <input class="input" type="text" id="email-login"/>
        </div>
      </div>
      <div class="field">
        <label class="label">Password</label>
        <div class="control">
          <input class="input" type="password" id="password-login" />
        </div>
      </div>
      <div class="field">
        <div class="control">
          <button class="button is-dark" type="submit">Login</button>
        </div>
      </div>
    </form>
  </div>

  <div class="column">
    <h2 class="title is-2">Sign-Up</h2>

    <form class="box" id="signup-form">
      <div class="field">
        <label class="label">First Name</label>
        <div class="control">
          <input class="input" type="text" id="first_name-signup" />
        </div>
      </div>
      <div class="field">
        <label class="label">Last Name</label>
        <div class="control">
          <input class="input" type="text" id="last_name-signup" />
        </div>
      </div>
      <div class="field">
        <label class="label">Email</label>
        <div class="control">
          <input class="input" type="text" id="email-signup" />
        </div>
      </div>
      <div class="field">
        <label class="label">Password</label>
        <div class="control">
          <input class="input" type="password" id="password-signup" />
        </div>
      </div>
      <div class="field">
        <div class="control">
          <button class="button is-dark" type="submit">Sign-Up</button>
        </div>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>