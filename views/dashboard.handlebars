<h1 class="has-text-centered is-size-2" id="dash-title">Dashboard</h1>
{{#each posts as |post| }}
<div class="container card has-text-centered ">
  <br>
      <div class="card-image">
  </div>
  <div class="card-content has-text-centered">
    <div class="media-center">
      <div class="media-center">
        <figure class="container image is-inline-block" id="post-image">
          <img src="{{post.picture}}" alt="{{post.title}}">
        </figure>
      </div>
      
    </div>
    <br>
    <div class="media-content">
        <p class="title is-4">{{post.title}}</p>
      </div>
    <div class="content is-size-5">
      {{post.description}}
      <br>
      {{!-- <p>Comments: {{post.comments.length}}</p> --}}
      <br>
       <a class="button is-danger is-light" href="/post/{{post.id}}">View/Add Comments</a>
      <br>
    </div>
  </div>
</div>
{{/each}}
